@import 'settings'
@import 'colors'

$home_header_img_path = $base_url '/assets/img/mountain_placeholder.jpg'

@media (min-width: 320px)
  .header__home,
  .header__event
    background-image: url($home_header_img_path)
    background-position: center
    background-size: cover
    overflow-x: hidden
    position: relative

    &.animation
      .header__home-content,
      .header__event-content
        opacity: 1
        top: 0
        transition: all 1s ease

  .header__home-content
    height: auto
    margin-bottom: 140px
    margin-top: 140px
    opacity: 0
    padding: 0 23px
    position: relative
    top: 30px
    z-index: 2

  .header__event-content
    height: auto
    margin-bottom: 140px
    margin-top: 160px
    opacity: 0
    padding: 0 23px
    position: relative
    top: 30px
    z-index: 2

  .header__home-content--title-big,
  .header__event-content--title-big
    color: #FFFFFF
    font-family: 'Nexa'
    font-size: 24px
    font-weight: 900
    line-height: 24px
    text-shadow: 0 2px 4px rgba(51, 51, 51, 0.8)

    &.gibson
      font-family: 'Gibson', sans-serif
      font-weight: 500
      padding-top: 20px

  .header__home-content--title-medium,
  .header__event-content--title-medium
    @extend .header__home-content--title-big
    font-size: 18px
    line-height: 18px

    &.gibson
      font-family: 'Gibson', sans-serif
      font-size: 18px
      font-weight: 400

  .header__home-content--title-small
    @extend .header__home-content--title-big
    font-family: 'Gibson'
    font-size: 20px
    font-weight: 300
    line-height: 20px
    margin: 40px 0 60px 0

  .header__home-content--button
    background-color: $red
    border-radius: 8px
    box-shadow: 0 2px 8px 0 $black-default
    color: $white
    display: block
    font-family: 'Gibson', sans-serif
    font-size: 20px
    font-weight: 400
    height: 64px
    line-height: 64px
    margin-top: 44px
    text-align: center
    transition: transform 0.3s ease
    width: 198px

    &:focus
      color: $white
      text-decoration: none

    &:hover
      animation: pulse 2s infinite
      color: $white
      cursor: pointer
      transition: transform 0.3s ease

  .header__page
    background-color: green
    height: 50vh

  .header__mountain-profile
    bottom: 0
    height: 20px
    left: -450px
    position: absolute
    transition: height 1s ease
    width: 400%
    z-index: 2

    &.animation
      height: 150px

@media (min-width: 768px)
  .header__home-content
    margin-bottom: calc(160px + 8vh)
    margin-top: calc(160px + 4vh)
    padding: 0 23px

@media (min-width: 1024px)
  .header__home,
  .header__event
    background-image: url($home_header_img_path)
    background-position: center
    background-size: cover
    overflow: hidden
    position: relative

  .header__home-content
    height: auto
    margin-bottom: calc(160px + 4vh)
    margin-top: calc(160px + 3vh)
    position: relative
    top: 30px

  .header__event-content
    margin-bottom: calc(160px + 4vh)
    margin-top: calc(160px + 3vh)
    position: relative
    z-index: 2

  .header__home-content--title-big,
  .header__event-content--title-big
    color: #FFFFFF
    font-family: 'Nexa'
    font-size: 48px
    font-weight: 900
    line-height: 48px

  .header__home-content--title-medium
    @extend .header__home-content--title-big
    font-size: 40px
    line-height: 40px

    &.gibson
      font-family: 'Gibson', sans-serif
      font-size: 32px
      font-weight: 400

  .header__home-content--title-small
    @extend .header__home-content--title-big
    font-family: 'Gibson'
    font-size: 26px
    font-weight: 400
    line-height: 26px
    margin: 40px 0 60px 0

  .header__home-content--button
    background-color: $red
    border-radius: 8px
    box-shadow: 0 2px 8px 0 $black-default
    color: $white
    display: block
    font-family: 'Gibson', sans-serif
    font-size: 26px
    font-weight: 400
    height: 80px
    line-height: 80px
    margin-top: 44px
    text-align: center
    width: 248px

  .header__page
    background-color: green
    height: 50vh

  .header__mountain-profile
    bottom: 0
    height: 20px
    left: -10px
    position: absolute
    transition: height 1s ease
    width: 102%
    z-index: 2

    &.animation
      height: 150px

@media (min-width: 1280px)
  .header__home-content
    margin-bottom: calc(160px + 6vh)
    margin-top: calc(160px + 4vh)
    padding: 0 23px

@media (min-width: 1480px)
  .header__home-content
    margin-bottom: calc(160px + 8vh)
    top: 30px

@keyframes pulse
  0%
    -webkit-box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.8), 0 2px 8px 0 $black-default

  70%
    -webkit-box-shadow: 0 0 0 10px rgba(255, 255, 255, 0), 0 2px 8px 0 $black-default

  100%
    -webkit-box-shadow: 0 0 0 0 rgba(255, 255, 255, 0), 0 2px 8px 0 $black-default

@keyframes pulse
  0%
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.8), 0 2px 8px 0 $black-default
    -moz-box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.8), 0 2px 8px 0 $black-default

  70%
    box-shadow: 0 0 0 10px rgba(255, 255, 255, 0), 0 2px 8px 0 $black-default
    -moz-box-shadow: 0 0 0 10px rgba(255, 255, 255, 0), 0 2px 8px 0 $black-default

  100%
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0), 0 2px 8px 0 $black-default
    -moz-box-shadow: 0 0 0 0 rgba(255, 255, 255, 0), 0 2px 8px 0 $black-default