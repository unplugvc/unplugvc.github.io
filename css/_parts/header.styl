@import 'settings'
@import 'colors'

$home_header_img_path = $base_url '/assets/img/mountain_placeholder.jpg'

@media (min-width: 320px)
  .header__home
    background-image: url($home_header_img_path)
    background-position: center
    background-size: cover
    overflow-x: hidden
    position: relative

  .header__home-content
    height: auto
    margin-bottom: calc(160px + 8vh)
    margin-top: calc(160px + 4vh)
    position: relative
    top: 0
    // height: 56vh
    // margin-top: -23vh
    // position: absolute
    // top: 50%
    // width: 100%
    z-index: 2

  .header__home-content--title-big
    color: #FFFFFF
    font-family: 'Nexa'
    font-size: 24px
    font-weight: 900
    line-height: 24px
    text-shadow: 0 2px 4px rgba(51, 51, 51, 0.8)

  .header__home-content--title-medium
    @extend .header__home-content--title-big
    font-size: 18px
    line-height: 18px

    &.gibson
      font-family: 'Gibson', sans-serif
      font-size: 18px
      font-weight: 400

  .header__home-content--title-small
    @extend .header__home-content--title-big
    font-family: 'Gibson'
    font-size: 20px
    font-weight: 300
    line-height: 20px
    margin: 40px 0 60px 0

  .header__home-content--button
    background-color: $red
    border-radius: 8px
    box-shadow: 0 2px 8px 0 $black-default
    color: $white
    display: block
    font-family: 'Gibson', sans-serif
    font-size: 20px
    font-weight: 400
    height: 64px
    line-height: 64px
    margin-top: 44px
    text-align: center
    width: 198px

    &:focus
      color: $white
      text-decoration: none

    &:hover
      color: $white

  .header__page
    background-color: green
    height: 50vh

  .header__mountain-profile
    bottom: 0
    left: -450px
    position: absolute
    width: 400%
    z-index: 2

@media (min-width: 1024px)
  .header__home
    background-image: url($home_header_img_path)
    background-position: center
    background-size: cover
    overflow-x: hidden
    position: relative

  .header__home-content
    height: auto
    margin-bottom: calc(160px + 8vh)
    margin-top: calc(160px + 4vh)
    position: relative
    top: 0

  .header__home-content--title-big
    color: #FFFFFF
    font-family: 'Nexa'
    font-size: 48px
    font-weight: 900
    line-height: 48px

  .header__home-content--title-medium
    @extend .header__home-content--title-big
    font-size: 40px
    line-height: 40px

    &.gibson
      font-family: 'Gibson', sans-serif
      font-size: 32px
      font-weight: 400

  .header__home-content--title-small
    @extend .header__home-content--title-big
    font-family: 'Gibson'
    font-size: 26px
    font-weight: 400
    line-height: 26px
    margin: 40px 0 60px 0

  .header__home-content--button
    background-color: $red
    border-radius: 8px
    box-shadow: 0 2px 8px 0 $black-default
    color: $white
    display: block
    font-family: 'Gibson', sans-serif
    font-size: 26px
    font-weight: 400
    height: 80px
    line-height: 80px
    margin-top: 44px
    text-align: center
    width: 248px

  .header__page
    background-color: green
    height: 50vh

  .header__mountain-profile
    bottom: 0
    left: 0
    position: absolute
    width: 101%
    z-index: 2