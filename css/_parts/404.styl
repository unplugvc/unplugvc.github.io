@import 'colors'

@media (min-width: 320px)
  .quattro-zero_quattro__navigation
    background-color: $white
    float: left
    height: 100px
    left: 0
    position: fixed
    top: 0
    width: 100%

    .top_navbar--go-back
      color: $black-default
      float: left

      img
        margin-top: 40px
        width: 25px

      p
        font-size: 20px
        margin-left: 15px
        margin-top: 28px

  .quattro-zero_quattro__gif-fullscreen
    background-image: url('https://media.giphy.com/media/g5YMCkSTYJ93G/giphy.gif')
    background-position: center
    background-size: cover
    height: 100vh
    width: 100%

    .content
      color: $white
      padding-top: 150px
      text-align: center

      img
        width: 200px

      h1
        font-family: 'Nexa', sans-serif
        font-size: 15vw

      h2
        font-family: 'Gibson', sans-serif
        font-size: 5vw
        font-weight: 500
        line-height: 5vw

@media (min-width: 768px)
  .quattro-zero_quattro__navigation
    float: left
    height: 150px

    .top_navbar--go-back
      color: $black-default

      img
        margin-top: 50px
        width: auto

      p
        font-size: inherit
        margin-left: 50px
        margin-top: 50px

  .quattro-zero_quattro__gif-fullscreen
    .content
      padding-top: 300px

      img
        width: 300px
