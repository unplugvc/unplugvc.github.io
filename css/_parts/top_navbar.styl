@import 'settings'
@import 'colors'

$negative_logo_path = $base_url '/assets/img/icons/logo/logo_negative.svg'

@media (min-width: 320px)
  .top_navbar
    display: none

  .top_navbar--mobile
    background: linear-gradient(180deg, #585858 0, rgba(102, 102, 102, 0.76) 24.83%, rgba(114, 114, 114, 0.54) 47.46%, rgba(127, 127, 127, 0.32) 70.56%, rgba(136, 136, 136, 0.1) 90.24%, rgba(145, 145, 145, 0) 100%)
    height: 76px
    line-height: 76px
    padding: 0 25px
    position: fixed
    transition: all ease 0.6s
    width: 100%
    z-index: 10

    .top_navbar__logo
      transition: width ease 0.4s
      width: 100px

      img
        width: 100%

      .logo_in_html
        transition: all 0.4s ease
        width: 100%

      .logo_in_html--word
        fill: #fff
        transition: all 0.4s ease

    .top_navbar__menu
      float: right
      font-size: 18px
      font-weight: 600

      a
        color: $white
        font-family: 'Gibson', sans-serif
        transition: all ease 0.4s

        &:not([href]):not([tabindex]):focus,
        &:not([href]):not([tabindex]):hover
          color: $white

    &.negative
      background: $white
      background-color: $white
      box-shadow: 0 2px 4px 0 rgba(51, 51, 51, 0.3)

      .logo_in_html
        transition: all 0.4s ease
        width: 100%

      .logo_in_html--word
        fill: #25283D
        transition: all 0.4s ease

      .top_navbar--go-back
        color: $black-default
        margin-top: 0

        svg
          float: left
          margin-top: 15px

      .top_navbar__menu
        a
          color: $black-default
          font-family: 'Gibson', sans-serif

          &:not([href]):not([tabindex]):focus,
          &:not([href]):not([tabindex]):hover
            color: $black-default

  .top_navbar--mobile-content
    background-color: $white
    border-top: 1px solid $grey-separator
    box-shadow: 0 2px 4px 0 rgba(51, 51, 51, 0.3)
    height: 80px
    left: 100vw
    overflow-x: scroll
    overflow-y: hidden
    position: fixed
    top: 76px
    transition: left 0.35s ease
    white-space: nowrap
    width: 100%
    z-index: 11

    &.show
      left: 0
      transition: left 0.35s ease

    &::-webkit-scrollbar
      display: none
      -webkit-appearance: none

    .top_navbar__menu-list
      color: $white
      list-style: none

      li
        display: inline-block
        font-size: 18px
        line-height: 80px
        padding-right: 24px

        a
          color: $black-default
          font-family: 'Gibson', sans-serif
          font-weight: 300

  .top_navbar--go-back
    color: white
    display: block
    font-size: 32px
    font-weight: 600
    line-height: 48px

    svg
      float: left
      margin-top: 15px

    img
      float: left
      margin-top: 15px

    p
      float: left
      margin-left: 16px
      margin-top: 15px

    &:hover
      color: white

@media (min-width: 1024px)
  .top_navbar--mobile,
  .top_navbar--mobile-content
    display: none

  .top_navbar
    background: transparent
    background: linear-gradient(180deg, #585858 0, rgba(102, 102, 102, 0.76) 24.83%, rgba(114, 114, 114, 0.54) 47.46%, rgba(127, 127, 127, 0.32) 70.56%, rgba(136, 136, 136, 0.16) 90.24%, rgba(145, 145, 145, 0) 100%)
    background-color: transparent
    color: $white
    display: block
    height: 116px
    line-height: 76px
    position: fixed
    transition: all ease 0.6s
    width: 100%
    z-index: 10

    .top_navbar__logo
      margin-top: 15px
      transition: all ease 0.4s
      width: 136px

      img
        width: 100%

      .logo_in_html
        transition: all 0.4s ease
        width: 100%

      .logo_in_html--word
        fill: #fff
        transition: all 0.4s ease

    .top_navbar__menu
      float: right
      list-style: none
      margin-top: 15px
      padding-left: 0
      transition: margin-top 0.4s ease

      li
        float: left
        font-size: 24px
        padding-left: 50px

        a
          color: $white
          font-family: 'Gibson', sans-serif
          font-weight: 300

        &.active
          font-weight: 600

    .top_navbar--go-back
      margin-top: 15px
      transition: all 0.4s ease

      svg
        float: left
        margin-top: 15px

      .logo_in_html--word
        fill: #fff
        transition: all 0.4s ease

    &.negative
      background: $white
      background-color: $white
      box-shadow: 0 2px 4px 0 rgba(51, 51, 51, 0.3)
      height: 76px
      transition: color 0.4s ease

      .row
        height: 76px

      .top_navbar__logo
        margin-top: 0
        transition: margin-top 0.4s ease

      .top_navbar--go-back
        color: $black-default
        margin-top: 0
        transition: margin-top 0.4s ease

        p
          transition: color 0.4s ease

        .logo_in_html--word
          fill: #25283D
          transition: all 0.4s ease

      .top_navbar__logo
        transition: width ease 0.4s
        width: 100px

        .logo_in_html
          transition: all 0.4s ease
          width: 100%

        .logo_in_html--word
          fill: #25283D
          transition: all 0.4s ease

        img
          width: 100%

      .top_navbar__menu
        margin: 0
        transition: margin-top 0.3s ease

        li
          a
            color: $black-default
            font-family: 'Gibson', sans-serif
            font-weight: 300
