@import 'settings'
@import 'variables'
@import 'colors'
/*
   Parts of the homepage
*/
@import 'home/speakers'
@import 'home/attendees'
@import 'home/organized'
@import 'home/past-editions'
@import 'home/location'
@import 'home/schedule'

$row_background_img_path = $base_url '/assets/img/cartography_background.jpg'

@media (min-width: 320px)
  .our-philosophy
    background-image: url($row_background_img_path)
    background-size: cover
    padding-bottom: 250px

    .title--third--negative
      padding-top: 150px

  .our-philosophy__mobile-leteral-scroll
    overflow-x: auto
    overflow-y: hidden
    white-space: nowrap
    -webkit-overflow-scrolling: touch

    &::-webkit-scrollbar
      display: none
      -webkit-appearance: none

  .our-philosophy__mobile-leteral-scroll-content
    padding-left: 15px

    .card__philosophies
      display: inline-block
      margin-right: 20px
      vertical-align: bottom
      width: 80vw

      .card__body
        white-space: normal

  .hike
    height: 400px
    position: relative

    .container
      position: relative

    .title--first--negative
      left: 50px
      position: absolute
      top: -126px
      z-index: 2

  .hike__card
    background: $white
    border-radius: 8px
    box-shadow: $card-shadow
    height: 520px
    left: 10%
    position: absolute
    text-align: center
    top: -100px
    width: 80%

    .title--second
      font-size: 16px
      margin-bottom: 0
      margin-top: 8px

    .text
      font-weight: 500
      margin-top: 4px

    img
      display: table
      margin: 35px auto 0 auto

  .carousel__home
    margin-top: 150px
    overflow-x: hidden
    position: relative
    width: 100%
    z-index: 2

  .carousel__home__mountain-profile
    bottom: 0
    left: -1000px
    position: absolute
    width: 500%
    z-index: 2

  .speakers
    margin-top: 60px

  .attendees
    margin-top: 60px

  .organized
    margin-top: 60px

  .schedule__tabs
    div[class^='tab__']
      display: none
      margin: 0 auto
      margin-top: 40px
      width: 80%

      .element
        background-color: $background-grey
        border-bottom: 1px solid $grey-separator-schedule
        padding: 20px 0

        &:first-child
          border-top-left-radius: 8px
          border-top-right-radius: 8px

        &:last-child
          border-bottom: 0
          border-bottom-left-radius: 8px
          border-bottom-right-radius: 8px

        .text--brown
          font-weight: 500
          margin-bottom: 0
          margin-top: 0

        .text
          margin-bottom: 0
          margin-top: 5px

@media (min-width: 768px)
  .our-philosophy
    .title--third--negative
      left: 15px
      padding-top: 300px

  .hike
    height: 100px

    .title--first--negative
      left: 15px

  .hike__card
    height: 200px
    left: 15px
    width: calc(100% - 30px)

  .carousel__home__mountain-profile
    bottom: 0
    left: -10px
    width: 101%
    z-index: 2

@media (min-width: 1024px)
  .our-philosophy
    background-position: top
    margin-top: -60px
    padding-bottom: 250px
    padding-top: 250px

    .title--third--negative
      padding-top: 0

  .hike
    .title--first--negative
      top: -144px

  .hike__card
    .title--second
      font-size: 20px

@media (min-width: 1300px)
  .schedule
    .schedule__line-container
      height: 296px

@media (min-width: 1600px)
  .our-philosophy
    padding-top: 400px

  .hike__card
    .title--second
      font-size: 20px