.price_table
  background-color: $background-grey
  margin-top: 47px
  padding-bottom: 60px
  padding-top: 56px

.price_table__card
  background-color: #FFFFFF
  border-radius: 16px
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.3)
  width: 100%

.price_table__card--head
  background: linear-gradient(225deg, #AE8A61 0, #73733C 100%)
  border-top-left-radius: 16px
  border-top-right-radius: 16px
  height: 110px
  position: relative

.price_table__card--body
  padding: 20px 20px 36px 20px

  img
    bottom: 0
    margin: auto
    position: absolute
    top: 0

  p
    margin: 0

.price_table__card--body-element
  margin-top: 16px

.price_table__card--head-title
  bottom: 18px
  color: $white
  font-family: Gibson
  font-size: 34px
  font-weight: 600
  left: 20px
  line-height: 34px
  margin-bottom: 0
  position: absolute